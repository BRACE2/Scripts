## Default figure size
# figure.figsize : 3.5, 2.625
figure.dpi: 300

## AXES
axes.facecolor      : ffffff   # axes background color
axes.edgecolor      : bcbcbc   # axes edge color
axes.grid           : True
axes.axisbelow      : True
axes.prop_cycle : cycler('color', ['003262', 'af5f5f','3b7ea1','000000','ffd31d','DDDDDD','003262','c4820e','f1d1d1','888888','1f1f6b']) #,'3990b5', ,'fdb515' (gold)
# axes.linewidth : 0.5

# axes3d.facecolor : 'w'

## GRID
grid.color : eeeeee #ffffff 
grid.alpha : 1.0
grid.linestyle : dotted # solid, dashed, dashdot, dotted, none, ' ', ''
# grid.linewidth : 0.5

## X axis
# xtick.direction : in
# xtick.major.size : 3
# xtick.major.width : 0.5
# xtick.minor.size : 1.5
# xtick.minor.width : 0.5
# xtick.minor.visible : True
# xtick.top : True

## Y axis
# ytick.direction : in
# ytick.major.size : 3
# ytick.major.width : 0.5
# ytick.minor.size : 1.5
# ytick.minor.width : 0.5
